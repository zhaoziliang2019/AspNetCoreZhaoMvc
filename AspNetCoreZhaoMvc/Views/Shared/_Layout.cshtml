<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <environment include="Development">
        <link href="~/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.bootcss.com/twitter-bootstrap/4.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/bootstrap/dist/css/bootstrap.min.css"
               asp-fallback-test-class="sr-only" 
              asp-fallback-test-property="position" 
              asp-fallback-test-value="absolute" rel="stylesheet">
    </environment>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a asp-controller="Account" asp-action="Register">注册</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Account" asp-action="Login">登录</a>
            </li>
        </ul>
    </nav>
    <div>
        @RenderBody()
    </div>
    <hr />
    <div>@RenderSection("bottom", required: false)</div>
    <environment exclude="Development">
        <script src="https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js"
                asp-fallback-src="~/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"></script>
        <script src="https://cdn.bootcss.com/twitter-bootstrap/4.4.1/js/bootstrap.min.js"
                asp-fallback-src="~/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.bootstrap"></script>
        <script src="https://cdn.bootcss.com/jquery-validate/1.19.1/jquery.validate.js"
                asp-fallback-src="~/jquery-validation/dist/jquery.validate.js"
                asp-fallback-test="window.jQuery&&window.jQuery.validator"></script>
        <script src="https://cdn.bootcss.com/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"
                asp-fallback-src="~/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"
                asp-fallback-test="window.jQuery&&window.jQuery.validator&&window.jQuery.validator.unobtrusive"></script>
    </environment>
    <environment include="Development">
        <script src="~/jquery/dist/jquery.min.js"></script>
        <script src="~/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
    </environment>
</body>
@await Component.InvokeAsync("Welcome")
<vc:welcome></vc:welcome>
</html>
