@model RoleEditViewModel
<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Id" readonly />
            <span class="invalid" asp-validation-for="Id"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RoleName"/>
            <span class="invalid" asp-validation-for="RoleName"></span>
        </div>
    </div>
    <div class="invalid" asp-validation-summary="ModelOnly"></div>
    <button type="submit" class="btn btn-primary">提交</button>
    <a asp-action="Index" class="btn btn-primary">返回列表</a>
</form>
<h3>角色的用户</h3>
<ul>
    @foreach (var user in Model.Users)
    {
        <li>@user</li>
    }
</ul>
<a asp-action="AddUserToRole" asp-route-RoleId="@Model.Id" class="btn btn-secondary">为角色添加用户</a>
<a asp-action="RemoveUserFormRole" asp-route-Id="@Model.Id" class="btn btn-secondary">从角色移除用户</a>